<?xml version="1.0" encoding="utf-8"?>
<mirror-sites>
  <mirror-site id="centos">
    <name>CentOS Mirror</name>
    <storage type="file"/>
    <advertiser type="httpdir"/>
    <advertiser type="rsync"/>
    <initializer>
      <executable>updater.py</executable>
    </initializer>
    <updater>
      <executable>updater.py</executable>
      <schedule type="interval">4h</schedule>
    </updater>
  </mirror-site>
  <mirror-site id="centos-altarch">
    <name>CentOS AltArch Mirror</name>
    <storage type="file"/>
    <advertiser type="httpdir"/>
    <advertiser type="rsync"/>
    <initializer>
      <executable>updater.py</executable>
    </initializer>
    <updater>
      <executable>updater.py</executable>
      <schedule type="interval">4h</schedule>
    </updater>
  </mirror-site>
</plugin>
