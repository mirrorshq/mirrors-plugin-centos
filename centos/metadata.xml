<?xml version="1.0" encoding="utf-8"?>
<plugin id="centos">
  <mirror-site id="centos">
    <name>CentOS Mirror</name>
    <storage type="file"></storage>
    <advertiser>
      <interface>file:http</interface>
      <interface>file:rsync</interface>
    </advertiser>
    <initializer>
      <executable>updater.py</executable>
    </initializer>
    <updater>
      <executable>updater.py</executable>
      <schedule type="interval">4h</schedule>
    </updater>
  </mirror-site>
  <mirror-site id="centos-altarch">
    <name>CentOS AltArch Mirror</name>
    <storage type="file"></storage>
    <advertiser>
      <interface>file:http</interface>
      <interface>file:rsync</interface>
    </advertiser>
    <initializer>
      <executable>updater.py</executable>
    </initializer>
    <updater>
      <executable>updater.py</executable>
      <schedule type="interval">4h</schedule>
    </updater>
  </mirror-site>
</plugin>
